{
  "manifest_version": 2,
  "name": "DesignMode",
  "description": "Tiny helper to enable document.designMode",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-off.png",
    "default_title": "Enable design mode!"
  },
  "permissions": [
    "activeTab"
  ]
}